# Accent Classifier Environment Configuration
# Copy this file to .env and update with your actual values

# Google Text-to-Speech API Configuration
# Required for generating TTS training samples
# Get your credentials from: https://console.cloud.google.com/
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json

# Optional: Google Cloud Project ID (if using Cloud TTS with project billing)
# GOOGLE_CLOUD_PROJECT=your-project-id

# Optional: Audio Processing Configuration
# AUDIO_SAMPLE_RATE=16000
# AUDIO_DURATION_MIN=1
# AUDIO_DURATION_MAX=30

# Optional: Model Training Configuration  
# MODEL_CONFIDENCE_THRESHOLD=0.7
# TRAINING_VALIDATION_SPLIT=0.2
# CROSS_VALIDATION_FOLDS=5

# Optional: TTS Sample Generation Configuration
# TTS_SAMPLES_PER_LANGUAGE=5
# TTS_CACHE_ENABLED=true
# TTS_QUALITY_CHECK=true

# Optional: Logging Configuration
# LOG_LEVEL=INFO
# VERBOSE_OUTPUT=false

# Development Mode Settings
# DEV_MODE=false
# SKIP_AUDIO_VALIDATION=false 